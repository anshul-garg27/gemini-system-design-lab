          "niche": ["systemdesign", "architecture", "scalability", "distributed", "microservices"],
          "micro_niche": ["loadbalancing", "caching", "sharding", "api", "database"],
          "intent": ["interview", "learning", "career", "skills"],
          "branded": []
        }
      },
      "carousel": {
        "content_schema_version": "v1.0.0", 
        "model_version": "gemini-2.5-flash",
